# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Default indentation for all files
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_size = 4

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_size = 4

# Go files
[*.go]
indent_style = tab
indent_size = 4
tab_width = 4

# CSS, SCSS, JSON files
[*.{css,scss,json}]
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Bazel files
[*.{bazel,bzl,BUILD,WORKSPACE}]
indent_size = 4

# Shell script files
[*.{sh,bash}]
indent_size = 4
